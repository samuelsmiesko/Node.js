<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script> 
$(document).ready(function(){
    $("#flip").hover(function(){
        $("#panel").slideDown("fast");
    }, function(){
        $("#panel").slideUp("fast");
    });    
});

var open = false;
console.log(open)

$(document).ready(function(){
    $("#flip").click(function() {
        open = !open;
        console.log('click')

        if(open) {
            $(".photogalery").animate({ 
                height: '500', 
                width: 'auto',   
            });
            $(".grayback").fadeIn({  
            });
            $(".labalediv").addClass("click");
        } else {
            $(".photogalery").animate({height: "300"});
            $(".grayback").fadeOut({});
            $(".labalediv").removeClass("click"); 
            
              
        }
    });
});
</script>

